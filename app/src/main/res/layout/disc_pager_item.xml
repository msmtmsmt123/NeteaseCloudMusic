<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.percent.PercentFrameLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <!--android:layout_width="@dimen/play_activity_disc"-->
        <!--android:layout_height="@dimen/play_activity_disc"-->

        <com.zsorg.neteasecloudmusic.widgets.SquareImageView
            android:layout_width="@dimen/play_activity_disc"
            android:layout_height="@dimen/play_activity_disc"
            android:layout_gravity="center"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/play_disc_small"
            app:layout_heightPercent="74%"
            app:layout_widthPercent="74%" />

        <com.zsorg.neteasecloudmusic.views.CustomImageView
            android:id="@+id/iv_album"
            android:layout_width="@dimen/play_activity_disc"
            android:layout_height="@dimen/play_activity_disc"
            android:layout_gravity="center"
            app:imageType="circle"
            android:gravity="center"
            android:background="@drawable/disc_song_small"
            app:layout_heightPercent="49%"
            app:layout_widthPercent="49%" />
    </android.support.percent.PercentFrameLayout>
</FrameLayout>