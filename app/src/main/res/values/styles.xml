<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColorHighlight">@android:color/black</item>
        <item name="tabBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.Night" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/background_dark</item>
        <item name="colorPrimaryDark">@android:color/background_dark</item>
        <item name="colorAccent">@android:color/background_dark</item>
        <item name="tabBackground">@android:color/background_dark</item>
        <!--<item name="tabBackgroundPressed">@android:color/darker_gray</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="StartAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/splash2</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- toolbar RadioButton的样式  -->
    <style name="ActionRadioStyle">
        <item name="android:layout_width">@android:dimen/app_icon_size</item>
        <item name="android:layout_height">@android:dimen/app_icon_size</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 单行textView的样式  -->
    <style name="SingleLineTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- play bar图片按钮的样式  -->
    <style name="PlayBarButtonStyle">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">@dimen/bottom_iv_size</item>
        <item name="android:layout_height">@dimen/bottom_iv_size</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- play Activity图片按钮的样式  -->
    <style name="PlayActivityButtonStyle" parent="PlayActivityButtonWithoutMarginStyle">
        <item name="android:layout_margin">@dimen/play_activity_btn_margin</item>
        <!--<item name="android:layout_marginRight">@dimen/play_activity_btn_margin</item>-->
    </style>

    <style name="PlayActivityButtonWithoutMarginStyle">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/btn_play_ripple</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <color name="colorBackground">#f3f4f6</color>
</resources>
