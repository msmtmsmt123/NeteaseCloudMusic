<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="com.zsorg.neteasecloudmusic.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="@style/SingleLineTextStyle"
        app:layout_constraintBottom_toBottomOf="@+id/content_main"
        app:layout_constraintLeft_toLeftOf="@+id/content_main"
        app:layout_constraintRight_toRightOf="@+id/content_main"
        app:layout_constraintTop_toTopOf="@+id/content_main"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <RelativeLayout
        android:id="@+id/bottomLayout"
        style="@style/SingleLineTextStyle"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="@+id/content_main"
        app:layout_constraintLeft_toLeftOf="@+id/content_main"
        app:layout_constraintRight_toRightOf="@+id/content_main"
        android:foreground="?attr/selectableItemBackground"
        android:background="?attr/tabBackground"
        android:padding="@dimen/bottom_layout_padding"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/iv_album"
            android:layout_marginStart="@dimen/bottom_layout_padding"
            android:layout_marginEnd="@dimen/bottom_layout_padding"
            android:scaleType="centerInside"
            android:layout_width="@dimen/bottom_iv_size"
            android:layout_height="@dimen/bottom_iv_size"
            android:layout_alignParentStart="true"
            android:src="@drawable/bottom_iv_default_src" />

        <TextView
            android:id="@+id/tv_song_name"
            android:layout_margin="@dimen/bottom_tv_margin"
            android:layout_alignTop="@id/iv_album"
            android:layout_toEndOf="@id/iv_album"
            android:textColor="@android:color/black"
            android:text="三个和尚"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_album_name"
            android:layout_margin="@dimen/bottom_tv_margin"
            android:textSize="@dimen/bottom_tv_small_size"
            android:layout_alignBottom="@id/iv_album"
            android:layout_toEndOf="@id/iv_album"
            android:text="儿童歌曲"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
